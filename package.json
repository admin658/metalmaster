{
  "name": "metal-master",
  "version": "1.0.0",
  "description": "Full-stack music learning platform for metal guitarists",
  "private": true,
  "workspaces": [
    "packages/api",
    "packages/web",
    "packages/mobile",
    "packages/shared-types",
    "packages/shared-validation",
    "packages/shared-schemas",
    "packages/web/src/components/alphatab"
  ],
  "scripts": {
    "dev": "concurrently \"yarn workspace @metalmaster/web dev\" \"yarn workspace @metalmaster/mobile start\"",
    "build": "yarn workspace @metalmaster/shared-types build && yarn workspace @metalmaster/shared-validation build && yarn workspace @metalmaster/api build && yarn workspace @metalmaster/web build",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "type-check": "tsc --noEmit",
    "test": "jest"
  },
  "devDependencies": {
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.3.0",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.0.0",
    "eslint": "^8.0.0",
    "expo-module-scripts": "^5.0.7",
    "jest": "^29.6.1",
    "rollup": "^4.53.3",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-license": "^3.6.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0",
    "vite": "^7.2.6",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "packageManager": "yarn@4.11.0+sha512.4e54aeace9141df2f0177c266b05ec50dc044638157dae128c471ba65994ac802122d7ab35bcd9e81641228b7dcf24867d28e750e0bcae8a05277d600008ad54",
  "dependencies": {
    "@react-native-community/slider": "^5.1.1"
  }
}
